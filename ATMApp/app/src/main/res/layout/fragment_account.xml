    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/list_lb"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"

            android:layout_weight="1"
            android:background="@drawable/shadow_bt_ac_small"
            android:padding="15dp"
            app:srcCompat="@drawable/p_smallimg_l"
            tools:srcCompat="@drawable/p_smallimg_l" />

        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/profile_pic"
            android:rotation="0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"

            android:layout_margin="40dp"
            android:layout_weight="1"
            android:background="@drawable/shadow_bt_ac_small"
            android:padding="13dp"
            app:srcCompat="@drawable/p_smallimg_r"
            tools:srcCompat="@drawable/p_smallimg_r" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="173dp"
        android:layout_weight="1"
        android:text="Richard Jefferson"
        app:layout_constraintBottom_toTopOf="@+id/tv_Kind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/tv_Kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:text="Standart Account"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_UserName" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/upgrade_shadow"
        android:paddingBottom="7dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:text="upgrade"
        android:textColor="#3872ba"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_UserName" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


    <Toolbar
        android:id="@+id/toolbar1_ac"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/white"
        android:contentInsetStart="0dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="0dp"
        android:paddingBottom="00dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:ignore="MissingConstraints">

        <GridView
            android:id="@+id/gvg_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="10dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:numColumns="2">

        </GridView>
    </Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>