<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bank.atm_app.AddToListActivity"
    android:padding="25dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/light_blue_400"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_atl_transaction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add transaction to lists"

            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="133dp"

            >

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_atl_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:ems="9"
                android:hint="Transaction name"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/tv_atl_transaction_title"
                tools:layout_editor_absoluteX="42dp" />

            <EditText
                android:id="@+id/et_atl_transaction_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="44dp"
                android:ems="5"
                android:hint="price"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/et_atl_transaction_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_atl_transaction_title" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_atl_transaction_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:gravity="top|left"
            android:hint="Describe the transaction..."
            android:inputType="textMultiLine"
            android:minLines="10"
            app:layout_constraintTop_toBottomOf="@+id/et_atl_transaction_name"
            tools:layout_editor_absoluteX="42dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.188">

        <Button
            android:id="@+id/btn_atl_leave_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Cancel"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="635dp" />

        <Button
            android:id="@+id/btn_atl_add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Add Data"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="635dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>