<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/oval_splash"
        android:label="@string/app_name"
        android:roundIcon="@drawable/oval_splash"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialAppRecyclerView">
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".GetStartedActivity"
            android:exported="true" />
        <activity
            android:name=".WalkThroughActivity"
            android:exported="true"
            android:label="@string/title_activity_walk_through"
            android:theme="@style/Theme.SocialAppRecyclerView.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.SocialAppRecyclerView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemActivity"
            android:exported="true" />
    </application>

</manifest>